    printf("Type '3' to decrypt a phrase (unknown key)\n");
    printf(": ");
    scanf("%c", &selector);
    switch (selector)
    {
        case '1':
            printf("Enter a phrse to be encrypted\nCapitals only:");
            scanf("%c", number);
            break;
        case '2':
            printf("not working");
            break;
        case '3':
            printf("not working");
            break;
        default:
            printf("invaild input");
            break;
    }
